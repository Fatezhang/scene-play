{
	"compilerOptions": {
		"target": "es2019",
		"module": "ESNext",
		"outDir": "./dist",
		"allowJs": true,
		"isolatedModules": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"lib": [
			"DOM",
			"es2019",
			"ESNext",
			"DOM.Iterable"
		],
		"sourceMap": false,
		"skipLibCheck": true,
		"strict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"noEmit": true
	},
	"include": [
		"./src/**/*",
		"./test/**/*",
	],
	"exclude": [
		"./node_modules"
	]
}
